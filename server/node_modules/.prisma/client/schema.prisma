generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(uuid())
  email        String  @unique
  name         String
  passwordHash String?
  googleId     String? @unique
  facebookId   String? @unique
  role         Role    @default(USER)
  status       Status  @default(ACTIVE)
  theme        String  @default("light")
  language     String  @default("en")

  inventories       Inventory[] @relation("Owner")
  sharedInventories Inventory[] @relation("SharedAccess")
  createdItems      Item[]      @relation("ItemCreator")
  comments          Comment[]
  likes             Like[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Inventory {
  id          String  @id @default(uuid())
  title       String
  description String? @db.Text
  category    String
  imageUrl    String?
  isPublic    Boolean @default(false)
  ownerId     String
  owner       User    @relation("Owner", fields: [ownerId], references: [id])

  authorizedUsers User[] @relation("SharedAccess")

  tags           Tag[]
  fields         InventoryField[]
  customIdConfig String?          @db.Text

  items    Item[]
  comments Comment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  version   Int      @default(0)

  @@fulltext([title, description])
}

model InventoryField {
  id          String    @id @default(uuid())
  inventoryId String
  inventory   Inventory @relation(fields: [inventoryId], references: [id])
  type        FieldType
  index       Int
  title       String
  description String?
  isVisible   Boolean   @default(true)

  @@unique([inventoryId, type, index])
}

model Item {
  id          String    @id @default(uuid())
  inventoryId String
  inventory   Inventory @relation(fields: [inventoryId], references: [id])

  customId String

  string1 String?
  string2 String?
  string3 String?

  text1 String? @db.Text
  text2 String? @db.Text
  text3 String? @db.Text

  number1 Float?
  number2 Float?
  number3 Float?

  bool1 Boolean?
  bool2 Boolean?
  bool3 Boolean?

  date1 DateTime?
  date2 DateTime?
  date3 DateTime?

  image1 String?
  image2 String?
  image3 String?

  likes Like[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  version   Int      @default(0)

  createdByUserId String?
  createdByUser   User?   @relation("ItemCreator", fields: [createdByUserId], references: [id])

  @@unique([inventoryId, customId])
  @@fulltext([customId])
  @@fulltext([string1, string2, string3, text1, text2, text3])
}

model Tag {
  id          String      @id @default(uuid())
  name        String      @unique
  inventories Inventory[]
}

model Comment {
  id          String    @id @default(uuid())
  content     String    @db.Text
  inventoryId String
  inventory   Inventory @relation(fields: [inventoryId], references: [id])
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  createdAt   DateTime  @default(now())
}

model Like {
  id     String @id @default(uuid())
  itemId String
  item   Item   @relation(fields: [itemId], references: [id])
  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@unique([itemId, userId])
}

enum Role {
  USER
  ADMIN
}

enum Status {
  ACTIVE
  BLOCKED
}

enum FieldType {
  STRING
  TEXT
  NUMBER
  BOOLEAN
  DATE
  IMAGE
}
