{
    "name": "inventory-manager-monorepo",
    "version": "1.0.0",
    "workspaces": [
        "client",
        "server"
    ],
    "scripts": {
        "build:client": "npm run build -w client",
        "build:server": "npx prisma generate --schema=server/prisma/schema.prisma",
        "build": "npm run build:client && npm run build:server",
        "start": "npm start -w server"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}